[Unit]
Description=Minetest Server
After=network.target

[Service]
Type=simple
User=minetest
Group=minetest
WorkingDirectory=/home/minetest
ExecStart=/usr/bin/minetest --config {{ lookup('env','MT_DISK') }}/mtconf/minetest.conf --world {{ lookup('env','MT_DISK') }}/mtworld --server 
Restart=on-abort

[Install]
WantedBy=multi-user.target
